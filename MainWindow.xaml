<Window x:Class="WPF_Subtitles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Subtitles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,0,-6.4,13">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <Label FontSize="30" Grid.Row="1">Plik do modyfikacji:</Label>
        <StackPanel Orientation="Horizontal" Grid.Row="3" RenderTransformOrigin="0.641,0.681">
            <Label FontSize="20" Content="Przesunięcie napisów:"/>
            <TextBox Width="100" Height="100" Text="Cos"/>
        </StackPanel>
    </Grid>
</Window>
